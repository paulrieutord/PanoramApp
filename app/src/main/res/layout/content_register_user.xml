<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.udp.appsproject.panoramapp.ui.register_user"
    tools:showIn="@layout/activity_register_user">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/register_user_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/register_user_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_register_user_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="20dp"
                android:src="@drawable/ic_menu_events" />

            <EditText
                android:id="@+id/register_user_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_username"
                android:maxLines="1" />

            <EditText
                android:id="@+id/register_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_name"
                android:maxLines="1" />

            <EditText
                android:id="@+id/register_user_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_last_name"
                android:maxLines="1" />

            <EditText
                android:id="@+id/register_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <EditText
                android:id="@+id/register_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_password_register"
                android:inputType="textPassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/register_user_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"
                android:hint="@string/prompt_repeat_password"
                android:inputType="textPassword"
                android:maxLines="1" />

            <Button
                android:id="@+id/email_sign_up_button"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/action_sign_up" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>