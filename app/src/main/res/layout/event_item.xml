<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_event_item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/icon_event_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:src="@drawable/ic_menu_events" />
    
    <TextView
        android:id="@+id/title_event_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_event_item"
        android:layout_toEndOf="@+id/icon_event_item"
        android:layout_toStartOf="@+id/time_event_item"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="Algún evento"
        android:maxLines="1" />

    <TextView
        android:id="@+id/place_event_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_event_item"
        android:layout_toEndOf="@+id/icon_event_item"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:text="Algún lugar"
        android:maxLines="1" />

    <TextView
        android:id="@+id/time_event_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/title_event_item"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:text="hh:mm hrs."
        android:maxLines="1" />

</RelativeLayout>